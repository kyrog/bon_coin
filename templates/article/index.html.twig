{% extends 'layout.html.twig' %}

{% block container %}
    <h1>Article index</h1>
        <div class="d-flex mb-5">
            <div class="d-flex justify-content-center offset-2 col-md-8 flex-wrap">
                {% for article in articles %}
                        <div id={{ article.id }} class="card mr-4 my-4" style="width: 18rem;">
                            <img class="card-img-top" src="https://random.imagecdn.app/500/150" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.title }}</h5>
                                <p class="card-text">{{ article.description }}</p>
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Show</a>
                            </div>
                        </div>
                {% endfor %}
            </div>
            <div class="col-md-4 mt-5">
                <button type="button" href="{{ path('article_new') }}" class="btn btn-primary">Create New</button>
            </div>
